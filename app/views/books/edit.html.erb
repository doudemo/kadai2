<h1>Editing Book</h1>

<%= form_with model: @book, url: "/books/#{@book.id}", method: :put,local:true do |f| %>
  <label for="book_title">Title</label>
    <%= f.text_field :title %>
  <label for="book_body">Body</label>
    <%= f.text_area :body %>

  <%= f.submit "Update Book" %>

  <% end %>

  <div>  <%= link_to "show",book_path(@book)%> |
   <%= link_to "back",books_path%>
  </div>
